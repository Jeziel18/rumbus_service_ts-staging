{
  "name": "rumbus_service_ts",
  "version": "1.0.0",
  "description": "RUMBus backend service in ts.",
  "main": "app.js",
  "author": "Gabriel Huertas Marrero <gabriel.huertasm@gmail.com> Cristian R. Melendez Gonzalez <cristianrmelendez@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "node dist/app.js",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "watch-node": "nodemon dist/app.js",
    "test": "jest --detectOpenHandles --forceExit --runInBand",
    "test-watch": "jest --watch --runInBand --detectOpenHandles --forceExit",
    "test-docker": "docker-compose -f docker-compose.test.yml up --force-recreate --abort-on-container-exit --exit-code-from api_tests",
    "test-docker-down": "docker-compose -f docker-compose.test.yml down",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript, Node\" -c \"yello.bold, cyan.bold\" \"yarn run watch-ts\" \"yarn run watch-node\"",
    "watch-docker": "docker-compose -f docker-compose.dev.yml up"
  },
  "dependencies": {
    "@types/node": "^12.11.7",
    "@types/osrm": "^5.12.0",
    "@types/restify": "^8.4.1",
    "@types/restify-cors-middleware": "^1.0.1",
    "@types/restify-errors": "^4.3.3",
    "@types/socket.io": "^2.1.4",
    "@types/uuid": "^3.4.5",
    "@types/ws": "^8.2.0",
    "aws-sdk": "^2.647.0",
    "axios": "^0.19.2",
    "concurrently": "^5.0.0",
    "elastic-apm-node": "^3.14.0",
    "mariadb": "^2.3.1",
    "mqtt": "^4.2.6",
    "nodemon": "^2.0.0",
    "restify": "^8.4.0",
    "restify-cors-middleware": "^1.1.1",
    "restify-errors": "^8.0.1",
    "restify-router": "^0.5.1",
    "socket.io": "^2.3.0",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "@types/jest": "^24.0.20",
    "@types/socket.io-client": "^1.4.33",
    "@types/socket.io-parser": "^3.0.0",
    "@types/supertest": "^2.0.8",
    "jest": "^24.9.0",
    "nodemon": "^2.0.0",
    "socket.io-client": "^2.3.0",
    "supertest": "^4.0.2",
    "ts-jest": "^24.1.0",
    "typescript": "^3.7.4"
  }
}
